
<div class="container">
  <h1>New game</h1>
  <div class="container-letters">
    <div class="letters">
      <% @letters.each do |letter| %>
        <div class="letter">
          <%= letter %>
        </div>
      <% end %>
    </div>
  </div>
  <form action="/score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <label for="word"> What is the longest word you can find man ?</label>
    <input type="text" name="word" id="word" placeholder="" required>
    <input type="submit" value="Go" id="go">
  </form>
</div>
